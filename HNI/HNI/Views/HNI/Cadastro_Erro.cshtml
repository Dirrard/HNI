
@{
    ViewBag.Title = "Cadastro";
}
@using HNI.Models
@model Usuario
<style type="text/css">
    body {
        background-image: url('@Url.Content("~/Background-Image.jpg")');
    }
</style>
<div class="row">
    <div class="text-center Bod">
        <h1 class="Erro">Você não confirmou com os termos de uso ou sua senha se difere do confirmar senha</h1>
        <br />
    </div>
    <div class="jumbotron Bodin">
        <h2>Cadastro</h2>
        <br />
        <div class="row">
            <div class="col-md-12">
                <form action="@Url.Action("Salvar_U","HNI")" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.Nome, "Nome:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                        </div>
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.Nick, "Nick:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Nick, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.Email, "Email:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.Senha, "Senha:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                        </div>
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.ConfSenha, "Conferir Senha:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.ConfSenha, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.DataNasc, "Data de Nascimento:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.DataNasc, new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.Genero, "Genero:", new { @class = "control-label" })
                            @Html.RadioButtonFor(m => m.Genero, "Masculino")
                            @Html.LabelFor(m => m.Genero, "Masculino", new { @class = "control-label" })
                            @Html.RadioButtonFor(m => m.Genero, "Feminino")
                            @Html.LabelFor(m => m.Genero, "Feminino", new { @class = "control-label" })
                            @Html.RadioButtonFor(m => m.Genero, "Outro")
                            @Html.LabelFor(m => m.Genero, "Outro", new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.CheckBoxFor(m => m.Termo)
                            @Html.LabelFor(m => m.Termo, "Eu li e Concordo com os", new { @class = "control-label" })
                            @Html.ActionLink("Termos de Uso", "Termo", "HNI")
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary FAR2 ">Salvar</button>
                            <a class="btn btn-default FAR2" href="~/Home/Index">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>



