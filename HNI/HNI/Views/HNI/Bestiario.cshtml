<div class="Besta1">
    <h3> Criaturas da Área de Terra : </h3>
    <hr class="Fi" />
    <div class="navbar-collapse collapse Besta ">
        <ul class="nav navbar-nav Besta ">
            <li>
                <a href="#" class="dropdown-toggle Besta " data-toggle="dropdown">
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu Besta">
                    <li>
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                @{ ViewBag.Id = 1;}
                                @{do
            {<div class="row Besta">
                                    <div class="col-md-4">
                                        <h5 class="Titulo1">Ilustração</h5>
                                        <hr class="Fi" />


                                        @{ViewBag.Busca = C = CD.Buscar(@ViewBag.Id);}

                                        @{  ViewBag.Imagem01 = "/Imagens/" + C.Imagem + ".png"; }
                                        <div class="jumbotron Ilustracao ">
                                            <img src="@ViewBag.Imagem01"
                                                 width="200" height="220" />
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <h5 class="Titulo1">Relato</h5>
                                        <hr class="Fi" />
                                        @{ ViewBag.Relato = C.Descricao;
                                            ViewBag.Nome = C.Nome;
                                            ViewBag.Agre = C.Agressividade;
                                            ViewBag.Per = C.Perigo;
                                            ViewBag.Ban = C.Bando;
                                            ViewBag.Cla = C.Classificacao;
                                            ViewBag.Rec = C.Ouro; }
                                        <p class="Relato">" @ViewBag.Nome, @ViewBag.Relato".</p>
                                        <h5 class="Titulo1">Informações</h5>
                                        <hr class="Fi" />
                                        <p class="Relato">Agressividade da Criatura: @ViewBag.Agre </p>
                                        <p class="Relato">Perigo Individual da Criatura: @ViewBag.Per</p>
                                        <p class="Relato">Individuos Normais por Bando: @ViewBag.Ban</p>
                                        <p class="Relato">Classificação da Criatura: @ViewBag.Cla</p>
                                        <p class="Relato">Recompensa por Cabeça da Criatura: @ViewBag.Rec Peças de Ouro </p>
                                    </div>
                                </div>
                                                ViewBag.Id++;
                                            } while (ViewBag.Id <= 3); }




                            </div>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>

