
@{
    ViewBag.Title = "Inventario";
}
@using HNI.Models
@using HNI.Dataaccess

<style type="text/css">
    body {
    background-image: url('@Url.Content("~/Background-Image.jpg")');
    }
</style>


@{

    PersonagemDAO PD = new PersonagemDAO();
    Personagem P = new Personagem();
    ClasseDAO CD = new ClasseDAO();
    Classe C = new Classe();
    HttpCookie cookie = Request.Cookies.Get("Personagem");

    P = PD.BuscarP(Convert.ToInt32(cookie.Value));
    C = CD.Buscar(P);
    ViewBag.Imagem = P.Imagem + ".png";
    ViewBag.Nome = P.Nome;
    ViewBag.Atkf = P.AtkF;
    ViewBag.Atkm = P.AtkM;
    ViewBag.Def = P.Def;
    ViewBag.Mana = P.Mana;
    ViewBag.Hp = P.Hp;

    ViewBag.Classe = C.Nome;
    ViewBag.Nivel = P.Nivel;
}
<hr />
<div class="jumbotron InventarioI">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4 text-center jumbotron Card">
                    <div class="row">
                        <img src="/Imagens/@ViewBag.Imagem"
                             width="200" height="330" />
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-1">
                    <div class="row">
                        <p>Armadura:</p>
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemArmadura"
                             width="100" height="100" />

                    </div>
                    <div class="row">
                        <a class="btn StatusBut btn-default" href="@Url.Action("Level_Up", "HNI", new { @Nome = "HP" })">Des-Equipar</a>
                    </div>
                    <div class="row">
                        <p>Arma:</p>
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemArma"
                             width="100" height="100" />
                    </div>
                    <div class="row">
                        <a class="btn StatusBut btn-default" href="@Url.Action("Level_Up", "HNI", new { @Nome = "HP" })">Des-Equipar</a>
                    </div>
                </div>
                <div class="col-md-3 InventarioA text-center">
                    <div class="row">
                        <p>Ataques Especiais:</p>
                    </div>
                    <div class="row ">

                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemAtke1"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemAtke2"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemAtke3"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemAtke4"
                             width="50" height="50" />
                    </div>
                    <div class="row">
                        <a class="btn StatusBut btn-default" href="@Url.Action("Level_Up", "HNI", new { @Nome = "HP" })">Árvore de Habilidades</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 text-center jumbotron InventarioS">
                    <div class="row">
                        <p>Status:</p>
                    </div>
                    <p class="text-center">Nome | @ViewBag.Nome</p>
                    <p class="text-center">Classe | @ViewBag.Classe</p>
                    <p class="text-center">Nivel | @ViewBag.Nivel</p>
                    <div class="row text-center">
                        <p>Hp | @ViewBag.Hp </p>
                    </div>
                    <div class="row text-center">
                        <p>Mana | @ViewBag.Mana</p>
                    </div>
                    <div class="row text-center">
                        <p>AtkF | @ViewBag.Atkf </p>
                    </div>
                    <div class="row text-center">
                        <p>AtkM | @ViewBag.Atkm </p>
                    </div>
                    <div class="row  text-center ">
                        <p>Def | @ViewBag.Def </p>
                    </div>
                </div>
                <div class="col-md-5 text-center col-md-offset-2 jumbotron InventarioIt">
                    <div class="row">
                        <p>Itens:</p>
                    </div>
                    <div class="row">
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem1"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem2"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem3"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem4"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem5"
                             width="50" height="50" />
                    </div>
                    <div class="row">
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem6"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem7"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem8"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem9"
                             width="50" height="50" />
                        <img class="InventarioE" src="/Imagens/@ViewBag.ImagemItem10"
                             width="50" height="50" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="row text-center">
        <a class="btn StatusBut btn-default" href="@Url.Action("Escolha", "HNI")">Voltar</a>
    </div>
</div>