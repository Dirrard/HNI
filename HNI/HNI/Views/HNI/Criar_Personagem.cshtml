
@{
    ViewBag.Title = "Criação de Personagem";
}
@using HNI.Models
@model Personagem

<style type="text/css">
    body {
        background-image: url('@Url.Content("~/Background-Image.jpg")');
    }
</style>
<div class="row">
    <hr/>
</div>
<div class="row">
    <div class="jumbotron" id="Criar">
        <div class="row">
            <div class="col-md-12">
                <form action="@Url.Action("Criar_P","HNI")" class="form-horizontal">

                    <div class="col-md-4 text-center jumbotron" id="Bodin">
                        <div class="row">
                        <p id="Classe1"></p>
                        </div>
                    </div>
                    <div class="col-md-4 text-center jumbotron" id="Bodin">
                        <div class="row">
                            <p id="Classe2"></p>
                        </div>
                    </div>
                    <div class="col-md-4 text-center jumbotron" id="Bodin">
                        <div class="row">
                            <p id="Classe3"></p>
                        </div>
                    </div>
                    <div class="col-md-12 text-center">
                        @Html.LabelFor(m => m.Classe, "Escolha sua Classe:", new { @class = "control-label" })
                        <div class="row">
                        @Html.LabelFor(m => m.Classe.Id, "Guerreiro:", new { @class = "control-label" })
                        @Html.RadioButtonFor(m => m.Classe.Id, 1)
                        @Html.LabelFor(m => m.Classe.Id, "Mago:", new { @class = "control-label" })
                        @Html.RadioButtonFor(m => m.Classe.Id, 2)
                        @Html.LabelFor(m => m.Classe.Id, "Ladino:", new { @class = "control-label" })
                        @Html.RadioButtonFor(m => m.Classe.Id, 3)
                       </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-md-offset-4 text-center ">
                            @Html.LabelFor(m => m.Nome, "Nome:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                             </div>
                        </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit" id="FAR2" class="btn btn-primary">Jogar</button>
                            <a class="btn btn-default" id="FAR2" href="~/HNI/Jogo">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>



