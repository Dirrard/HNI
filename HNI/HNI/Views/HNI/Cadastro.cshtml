
@{
    ViewBag.Title = "Cadastro";
}
@using HNI.Models
@model Usuario
<div class="row">
    <div id="Bod" class="text-center">
        <h1>Bem-Vindo ao Cadastro do jogo HNI</h1>
        <br />
    </div>
    <div class="jumbotron" id="Bodin">
        <h2>Cadastro</h2>
        <br />
        <div class="row">
            <div class="col-md-12">
                <form action="@Url.Action("Salvar","Cor")" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.Nome, "Nome:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.Nick, "Nick:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Nick, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.Email, "Email:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.Senha, "Senha:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.ConfSenha, "Conferir Senha:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.ConfSenha, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.DataNasc, "Data de Nascimento:", new { @class = "control_label" })
                            @Html.TextBoxFor(m => m.DataNasc, new { @class = "form-control" })
                        </div>
                        <div class="col-md-8">
                            @Html.LabelFor(m => m.Genero, "Genero:", new { @class = "control_label" })
                            <input type="radio" name="@Html.RadioButton("GeneroM", false)
                            <label for="radio-choice-v-2a">Masculino</label>
                            <input type="radio" name="@Html.RadioButton("GeneroF", false)
                            <label for="radio-choice-v-2b">Feminino</label>
                            <input type="radio" name="@Html.RadioButton("GeneroO", false)
                            <label for="radio-choice-v-2c">Outro</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="button" class="btn btn-default">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

